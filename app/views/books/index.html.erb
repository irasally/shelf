<h1>Book List</h1>
<ul class="navigation">
<% if params[:action] == "index" %>
<li class="selected">在庫</li>
<% else %>
<li><%= link_to "在庫", :books %></li>
<% end %>
<% if params[:action] == "checked_out" %>
<li class="selected">貸し出し中</li>
<% else %>
<li><%= link_to "貸し出し中", [:checked_out, :books] %></li>
<% end %>
</ul>
<table class="books">
  <col class="title"/>
  <col class="authers"/>
  <col class="publish_year"/>
  <th>Title</th>
  <th>Authers</th>
  <th>Publish Year</th>
  <th></th>
  <% @books.each do |book| %>
  <tr>
    <td><%= link_to book.title, book %></td>
    <td><%= book.authers %></td>
    <td><%= book.publish_year %></td>
    <td>
      <%= link_to '修正', [:edit, book]%>
      <%= if book.checked_out?
	    link_to('在庫', [:check_in, book], :method => :put) 
          else 
	    link_to('貸出', [:check_out, book], :method => :put) 
          end
      %>
      <%= link_to '削除', book, :method => :delete, :confirm => '本当に削除しますか？' %>
    </td>
  </tr>
  <% end %>
</table>
<p class="link_to"><%= link_to "新規作成", [:new, :book ] %></p>
